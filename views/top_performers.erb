    // Hisse arama fonksiyonalitesi
    function setupStockSearch() {
        const searchInput = document.getElementById('stockSearchInput');
        const searchBtn = document.getElementById('searchStockBtn');
        const clearBtn = document.getElementById('clearSearchBtn');
        const searchTimeframe = document.getElementById('searchTimeframe');
        const searchResult = document.getElementById('searchResult');
        const searchLoading = document.getElementById('searchLoading');
        
        if (!searchInput || !searchBtn) {
            console.warn('Arama elementleri bulunamadƒ±');
            return;
        }
        
        // Arama butonu click eventi
        searchBtn.addEventListener('click', function() {
            const symbol = searchInput.value.trim().toUpperCase();
            const timeframe = searchTimeframe.value;
            
            if (!symbol) {
                alert('L√ºtfen bir hisse kodu girin (√∂rn: THYAO)');
                return;
            }
            
            if (symbol.length < 3 || symbol.length > 6) {
                alert('Hisse kodu 3-6 karakter arasƒ±nda olmalƒ±dƒ±r');
                return;
            }
            
            searchStock(symbol, timeframe);
        });
        
        // Enter tu≈üu ile arama
        searchInput.addEventListener('keypress', function(e) {
            if (e.key === 'Enter') {
                searchBtn.click();
            }
        });
        
        // Temizle butonu
        clearBtn.addEventListener('click', function() {
            searchInput.value = '';
            searchResult.style.display = 'none';
            clearBtn.style.display = 'none';
            searchInput.focus();
        });
        
        // Input deƒüi≈üikliƒüinde temizle butonunu g√∂ster/gizle
        searchInput.addEventListener('input', function() {
            if (this.value.trim()) {
                clearBtn.style.display = 'block';
            } else {
                clearBtn.style.display = 'none';
                searchResult.style.display = 'none';
            }
        });
    }
    
    // Hisse arama fonksiyonu
