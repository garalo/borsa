                                 timeframe === '6mo' ? 1 : 
                                 timeframe === '1y' ? 1.5 : 2;
                maxHigh = (stockData.current_price * (1 + (volatility * multiplier / 100))).toFixed(2);
                minLow = (stockData.current_price * (1 - (volatility * multiplier * 0.7 / 100))).toFixed(2);
            }
            
            // H√ºcreleri g√ºncelle
            const performanceCell = row.querySelector('.performance-cell .badge');
            const volatilityCell = row.querySelector('.volatility-cell');
            const highCell = row.querySelector('.high-cell');
            const lowCell = row.querySelector('.low-cell');
            
            if (performanceCell) {
                performanceCell.textContent = `${performance > 0 ? '+' : ''}${performance}%`;
                performanceCell.className = `badge fs-6 ${performance > 0 ? 'bg-success' : 'bg-danger'}`;
            }
            
            if (volatilityCell) {
                if (tableBodyId === 'volatileTableBody') {
                    volatilityCell.querySelector('.badge').textContent = `${volatility}%`;
                } else {
                    volatilityCell.textContent = `${volatility}%`;
                }
            }
            
            if (highCell) {
                highCell.textContent = `${maxHigh} TL`;
            }
            
            if (lowCell) {
                lowCell.textContent = `${minLow} TL`;
            }
            
            // Sƒ±ralama i√ßin veriyi sakla
            if (sortBy === 'volume') {
                // Hacim tablosu i√ßin ortalama hacmi kullan
                const avgVolume = stockData.volume_metrics ? stockData.volume_metrics.avg_volume : 0;
                row.dataset.sortValue = avgVolume;
            } else {
                row.dataset.sortValue = sortBy === 'performance' ? performance : volatility;
            }
        });
        
        // Mobil kartlarƒ± da g√ºncelle
        cards.forEach(card => {
            const stockData = JSON.parse(card.getAttribute('data-stock'));
            
            // Se√ßilen zaman dilimi i√ßin veriyi al
            let performance, volatility;
            
            if (stockData.timeframes && stockData.timeframes[timeframe]) {
                const tf = stockData.timeframes[timeframe];
                performance = tf.performance;
                volatility = tf.volatility;
            } else {
                performance = stockData.performance || 0;
                volatility = stockData.volatility || 10;
            }
            
            // Mobil karttaki performans badge'ini g√ºncelle
            const performanceBadge = card.querySelector('.stock-card-header .badge');
            if (performanceBadge) {
                performanceBadge.textContent = `${performance > 0 ? '+' : ''}${performance}%`;
                performanceBadge.className = `badge fs-6 ${performance > 0 ? 'bg-success' : 'bg-danger'}`;
            }
            
            // Volatilite deƒüerini g√ºncelle
            const volatilityMetric = card.querySelector('.metric-item:last-child .metric-value');
            if (volatilityMetric) {
                volatilityMetric.textContent = `${volatility}%`;
            }
            
            // Sƒ±ralama i√ßin veriyi sakla
            if (sortBy === 'volume') {
                const avgVolume = stockData.volume_metrics ? stockData.volume_metrics.avg_volume : 0;
                card.dataset.sortValue = avgVolume;
            } else {
                card.dataset.sortValue = sortBy === 'performance' ? performance : volatility;
            }
        });
        
        // Tabloyu yeniden sƒ±rala
        sortTable(tableBodyId, sortBy, isGainers);
    }
    
    // Tablo sƒ±ralama
    function sortTable(tableBodyId, sortBy, isGainers) {
        const tableBody = document.getElementById(tableBodyId);
        const rows = Array.from(tableBody.querySelectorAll('tr'));
        
        rows.sort((a, b) => {
            const aValue = parseFloat(a.dataset.sortValue);
            const bValue = parseFloat(b.dataset.sortValue);
            
            if (isGainers === true) {
                return bValue - aValue; // B√ºy√ºkten k√º√ß√ºƒüe (kazananlar)
            } else if (isGainers === false) {
                return aValue - bValue; // K√º√ß√ºkten b√ºy√ºƒüe (kaybedenler)
            } else {
                return bValue - aValue; // B√ºy√ºkten k√º√ß√ºƒüe (volatil)
            }
        });
        
        // Sƒ±ra numaralarƒ±nƒ± g√ºncelle ve tabloyu yeniden olu≈ütur
        rows.forEach((row, index) => {
            const badge = row.querySelector('.badge');
            if (badge) {
                badge.textContent = index + 1;
            }
            tableBody.appendChild(row);
        });
        
        // Mobil kartlarƒ± da sƒ±rala
        const cardViewIds = {
            'gainersTableBody': 'gainersCardView',
            'losersTableBody': 'losersCardView',
            'volatileTableBody': 'volatileCardView',
            'volumeTableBody': 'volumeCardView'
        };
        
        const cardView = document.getElementById(cardViewIds[tableBodyId]);
        if (cardView) {
            const cards = Array.from(cardView.querySelectorAll('.stock-card'));
            
            cards.sort((a, b) => {
                const aValue = parseFloat(a.dataset.sortValue);
                const bValue = parseFloat(b.dataset.sortValue);
                
                if (isGainers === true) {
                    return bValue - aValue;
                } else if (isGainers === false) {
                    return aValue - bValue;
                } else {
                    return bValue - aValue;
                }
            });
            
            // Mobil kartlarƒ±n sƒ±ra numaralarƒ±nƒ± g√ºncelle
            cards.forEach((card, index) => {
                const rankBadge = card.querySelector('.stock-rank');
                if (rankBadge) {
                    rankBadge.textContent = index + 1;
                }
                cardView.appendChild(card);
            });
        }
    }
    
