<div class="container mt-4">
  <div class="row">
    <div class="col-12">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 text-primary">üìä BIST T√úM Performans Analizi (Son 2 Yƒ±l)</h1>
        <a href="/" class="btn btn-outline-primary">
          ‚Üê Ana Sayfaya D√∂n
        </a>
      </div>
      
      <% if @error_message %>
        <div class="alert alert-danger">
          <%= @error_message %>
        </div>
      <% end %>
      
      <% if @performers && @performers.any? %>
        <!-- Analiz √ñzeti -->
        <div class="alert alert-info mb-4">
          <h6 class="alert-heading">üìä Analiz √ñzeti</h6>
          <p class="mb-1">
            <strong><%= @performers.length %></strong> BIST hissesi analiz edildi. 
          </p>
          <p class="mb-0">
            <span class="badge bg-success me-2">üìä Investing.com: <%= @performers.count { |p| p[:source] == 'investing.com' } %> hisse (Split-Adjusted)</span>
            <span class="badge bg-warning">üìà Yahoo Finance: <%= @performers.count { |p| p[:source] == 'yahoo' } %> hisse (Fallback)</span>
          </p>
        </div>
        <!-- En √áok Kazandƒ±ranlar -->
        <div class="row mb-4">
          <div class="col-12">
            <div class="card">
              <div class="card-header bg-success text-white">
                <h5 class="mb-0">üöÄ En √áok Kazandƒ±ranlar (Top 20)</h5>
              </div>
              <div class="card-body p-0">
                <div class="table-responsive">
                  <table class="table table-hover mb-0">
                    <thead class="table-light">
                      <tr>
                        <th>Sƒ±ra</th>
                        <th>Hisse</th>
                        <th>G√ºncel Fiyat</th>
                        <th>2 Yƒ±l Zirve</th>
                        <th>2 Yƒ±l Dip</th>
                        <th>Performans</th>
                        <th>Volatilite</th>
                        <th>Analiz</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% @top_gainers.each_with_index do |stock, index| %>
                        <tr>
                          <td><span class="badge bg-success"><%= index + 1 %></span></td>
                          <td><strong><%= stock[:symbol] %></strong></td>
                          <td><%= stock[:current_price] %> TL</td>
                          <td class="text-danger"><%= stock[:max_high] %> TL</td>
                          <td class="text-success"><%= stock[:min_low] %> TL</td>
                          <td>
                            <span class="badge bg-success fs-6">
                              +<%= stock[:performance] %>%
                            </span>
                          </td>
                          <td><%= stock[:volatility] %>%</td>
                          <td>
                            <a href="/?:symbol=<%= stock[:symbol] %>&range=2y" 
                               class="btn btn-sm btn-outline-primary">
                              Grafik
                            </a>
                          </td>
                        </tr>
                      <% end %>
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- En √áok Kaybedenler -->
        <div class="row mb-4">
          <div class="col-12">
            <div class="card">
              <div class="card-header bg-danger text-white">
                <h5 class="mb-0">üìâ En √áok Kaybedenler (Top 20)</h5>
              </div>
              <div class="card-body p-0">
                <div class="table-responsive">
                  <table class="table table-hover mb-0">
                    <thead class="table-light">
                      <tr>
                        <th>Sƒ±ra</th>
                        <th>Hisse</th>
                        <th>G√ºncel Fiyat</th>
                        <th>2 Yƒ±l Zirve</th>
                        <th>2 Yƒ±l Dip</th>
                        <th>Performans</th>
                        <th>Volatilite</th>
                        <th>Analiz</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% @top_losers.each_with_index do |stock, index| %>
                        <tr>
                          <td><span class="badge bg-danger"><%= index + 1 %></span></td>
                          <td><strong><%= stock[:symbol] %></strong></td>
                          <td><%= stock[:current_price] %> TL</td>
                          <td class="text-danger"><%= stock[:max_high] %> TL</td>
                          <td class="text-success"><%= stock[:min_low] %> TL</td>
                          <td>
                            <span class="badge bg-danger fs-6">
                              <%= stock[:performance] %>%
                            </span>
                          </td>
                          <td><%= stock[:volatility] %>%</td>
                          <td>
                            <a href="/?:symbol=<%= stock[:symbol] %>&range=2y" 
                               class="btn btn-sm btn-outline-primary">
                              Grafik
                            </a>
                          </td>
                        </tr>
                      <% end %>
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- En Volatil Hisseler -->
        <div class="row mb-4">
          <div class="col-12">
            <div class="card">
              <div class="card-header bg-warning text-dark">
                <h5 class="mb-0">‚ö° En Volatil Hisseler (Top 20)</h5>
              </div>
              <div class="card-body p-0">
                <div class="table-responsive">
                  <table class="table table-hover mb-0">
                    <thead class="table-light">
                      <tr>
                        <th>Sƒ±ra</th>
                        <th>Hisse</th>
                        <th>G√ºncel Fiyat</th>
                        <th>2 Yƒ±l Zirve</th>
                        <th>2 Yƒ±l Dip</th>
                        <th>Performans</th>
                        <th>Volatilite</th>
                        <th>Analiz</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% @most_volatile.each_with_index do |stock, index| %>
                        <tr>
                          <td><span class="badge bg-warning text-dark"><%= index + 1 %></span></td>
                          <td><strong><%= stock[:symbol] %></strong></td>
                          <td><%= stock[:current_price] %> TL</td>
                          <td class="text-danger"><%= stock[:max_high] %> TL</td>
                          <td class="text-success"><%= stock[:min_low] %> TL</td>
                          <td>
                            <span class="badge <%= stock[:performance] > 0 ? 'bg-success' : 'bg-danger' %> fs-6">
                              <%= stock[:performance] > 0 ? '+' : '' %><%= stock[:performance] %>%
                            </span>
                          </td>
                          <td>
                            <span class="badge bg-warning text-dark fs-6">
                              <%= stock[:volatility] %>%
                            </span>
                          </td>
                          <td>
                            <a href="/?:symbol=<%= stock[:symbol] %>&range=2y" 
                               class="btn btn-sm btn-outline-primary">
                              Grafik
                            </a>
                          </td>
                        </tr>
                      <% end %>
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- ƒ∞statistikler -->
        <div class="row">
          <div class="col-md-4">
            <div class="card text-center">
              <div class="card-body">
                <h5 class="card-title text-success">üìà Kazanan Hisse</h5>
                <h2 class="text-success"><%= @performers.count { |p| p[:performance] > 0 } %></h2>
                <p class="text-muted">Toplam <%= @performers.length %> hisseden</p>
              </div>
            </div>
          </div>
          <div class="col-md-4">
            <div class="card text-center">
              <div class="card-body">
                <h5 class="card-title text-danger">üìâ Kaybeden Hisse</h5>
                <h2 class="text-danger"><%= @performers.count { |p| p[:performance] < 0 } %></h2>
                <p class="text-muted">Toplam <%= @performers.length %> hisseden</p>
              </div>
            </div>
          </div>
          <div class="col-md-4">
            <div class="card text-center">
              <div class="card-body">
                <h5 class="card-title text-primary">üìä Ortalama Performans</h5>
                <h2 class="<%= @performers.map { |p| p[:performance] }.sum / @performers.length > 0 ? 'text-success' : 'text-danger' %>">
                  <%= (@performers.map { |p| p[:performance] }.sum / @performers.length).round(2) %>%
                </h2>
                <p class="text-muted">Son 2 yƒ±l</p>
              </div>
            </div>
          </div>
        </div>
      <% else %>
        <div class="text-center py-5">
          <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Y√ºkleniyor...</span>
          </div>
          <p class="mt-3">Veriler y√ºkleniyor...</p>
        </div>
      <% end %>
    </div>
  </div>
</div>